{% extends 'base.html.twig' %}

{% block title %}Ajouter un film{% endblock %}

{% block content %}
    <div class="container py-5">
        <h1 class="text-center text-primary mb-4">
            <i class="fas fa-plus-circle"></i> Ajouter un film
        </h1>

        <form action="/film/create" method="POST" class="shadow p-4 rounded bg-light">
            <div class="mb-3">
                <label for="title" class="form-label fw-bold">Titre</label>
                <input type="text" id="title" name="title" class="form-control" placeholder="Entrez le titre du film" required>
            </div>

            <div class="mb-3">
                <label for="year" class="form-label fw-bold">Année</label>
                <input type="number" id="year" name="year" class="form-control" placeholder="Entrez l'année de sortie" required>
            </div>

            <div class="mb-3">
                <label for="type" class="form-label fw-bold">Type</label>
                <input type="text" id="type" name="type" class="form-control" placeholder="Entrez le genre du film (ex. : Action, Drame)" required>
            </div>

            <div class="mb-3">
                <label for="director" class="form-label fw-bold">Réalisateur</label>
                <input type="text" id="director" name="director" class="form-control" placeholder="Entrez le nom du réalisateur" required>
            </div>

            <div class="mb-3">
                <label for="synopsis" class="form-label fw-bold">Synopsis</label>
                <textarea id="synopsis" name="synopsis" class="form-control" rows="4" placeholder="Entrez le synopsis du film" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-save"></i> Ajouter le film
            </button>
        </form>
    </div>
{% endblock %}
